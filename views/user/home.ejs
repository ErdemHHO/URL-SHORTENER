    <!-- ======= Hero Section ======= -->
    <section id="hero" class="hero d-flex align-items-center ">
        <div class="container">
            <div class="row gy-4 d-flex justify-content-center">
                <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                    <h2 data-aos="fade-up">Merhaba <%= user.adSoyad %></h2>  
                    <p data-aos="fade-up" data-aos-delay="100"></p>
                    
                    <form id="urlkısaltma" method="post" class="mb-3" data-aos="fade-up" novalidate>
                        <div class="form-group mb-2">
                            <label for="url" class="text-white form-label">Dönüştürmek İstediğiniz Url:</label>
                            <input id="url" name="url" type="url" class="form-control border border-2 form-control rounded-pill"
                                aria-describedby="url" placeholder="Url Giriniz">
                        </div>
                    
                        <div class="form-group mt-3">
                            <label for="changeUrl" class="text-white form-label">İstediğiniz Takma Url İsmi:</label>
                            <input id="changeUrl" name="changeUrl" type="url" class="border border-2 form-control rounded-pill" aria-describedby="url"
                                placeholder="Url Giriniz">
                        </div>

                        <div class="form-group mt-3">
                            <label for="gecerlilik" class="text-white form-label">Geçerlilik Süresi:</label>
                            <select id="gecerlilik" name="gecerlilik" style="border: none;" aria-label="Default select example" class=" form-control rounded-pill ">
                                <option>Seçiniz</option>
                                <option value="1">Bir Saat</option>
                                <option value="2">Bir Gün</option>
                                <option value="3">Bir Hafta</option>
                                <option value="4">Bir Ay</option>
                                <option value="4">Bir Yıl</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-info mt-4">Dönüştür</button>
                    </form>
    
