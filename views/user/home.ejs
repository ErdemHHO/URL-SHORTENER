<!DOCTYPE html>
<html lang="tr">

    <%- include("./partials/head")  %>

<body>
    <!-- ======= Header ======= -->
    <%- include("./partials/header")  %>
    <!-- End Header -->
    <!-- End Header -->
<!-- class="form-search d-flex align-items-stretch mb-3" data-aos="fade-up" data-aos-delay="200" -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="hero d-flex align-items-center ">
          <div class="container ">
              <div class="row gy-4 d-flex justify-content-center">
                  <div class="order-2 order-lg-1 d-flex flex-column justify-content-center">
                      <h2 class="text-center" data-aos="fade-up">Merhaba <%= user.adSoyad %> !</h2>  
                      <p data-aos="fade-up" data-aos-delay="100"></p>
                      <div class="container mt-2">
                        <div class="row">
                          <div class="col-md-3"></div>
                          <div class="col-md-6">
                            <div>
                              <h2 class="text-light text-center">Url Dönüştür</h2>    
                              <form method="post" >
                                <div class="form-group mb-2">
                                    <label for="url" class="text-white form-label">Dönüştürmek İstediğiniz Url:</label>
                                    <input id="fullUrl" name="fullUrl" type="url" placeholder="Url Giriniz" class="form-control border border-2 form-control rounded-pill" aria-describedby="url" placeholder="Url Giriniz">
                                </div>

                                <div class="form-group mt-3">
                                    <label for="changeUrl" class="text-white form-label">İstediğiniz Takma Url İsmi:</label>
                                    <input id="changeUrl" name="verilenIsim" type="text" class="border border-2 form-control rounded-pill" aria-describedby="url"
                                        placeholder="Url Giriniz">
                                </div>

                                <div class="form-group mt-3">
                                    <label for="gecerlilik" class="text-white form-label">Geçerlilik Süresi:</label>
                                    <select id="gecerlilik" name="gecerlilik" style="border: none;" aria-label="Default select example" class=" form-control rounded-pill ">
                                        <option>Seçiniz</option>
                                        <option value="1">Bir Dakika</option>
                                        <option value="2">Bir Saat</option>
                                        <option value="3">Bir Gün</option>
                                        <option value="4">Bir Hafta</option>
                                        <option value="5">Bir Ay</option>
                                        <option value="6">Bir Yıl</option>
                                    </select>
                                </div>
                                <button
                                  class="bg-gray-600 rounded w-full text-white py-3 px-4 mt-5 hover:bg-black"
                                  type="submit">
                                  Oluştur
                                </button>
                              </form>
                            </div>
                          </div>
                          <div class="col-md-3"></div>
                        </div>
                        
                      </div>
                      

                  </div>
              </div>
          </div>
    </section><!-- End Hero Section --><!-- End Hero Section -->

    <%- include("./partials/main")  %>

    <!-- ======= Footer ======= -->
    <%- include("./partials/footer")  %>
    <!-- End Footer -->
    <!-- End Footer -->


    <%- include("./partials/script")  %>

</body>

</html>